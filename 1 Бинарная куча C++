int main() {
    #исходная строка
    string original = "AaBbCcDd";
    
    #создаем две бинарные кучи
    BinaryHeap uppercaseHeap;
    BinaryHeap lowercaseHeap;
    
    #проходим по исходной строке с шагом 2
    for (size_t i = 0; i < original.length(); i += 2) {
        #добавляем заглавные буквы
        uppercaseHeap.add(original[i]);
    }
    
    for (size_t i = 1; i < original.length(); i += 2) {
        #добавляем строчные буквы
        lowercaseHeap.add(original[i]);
    }
    
    #выводим результаты
    cout << "Заглавные буквы: " << uppercaseHeap.getString() << endl;
    cout << "Строчные буквы: " << lowercaseHeap.getString() << endl;
    
    return 0;
}
