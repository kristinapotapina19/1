def find_max(arr):
    # Базовый случай: если массив состоит из одного элемента
    if len(arr) == 1:
        return arr[0]
    # Рекурсивно ищем максимум в оставшемся массиве
    max_of_rest = find_max(arr[1:])
    # Сравниваем первый элемент с максимумом оставшегося массива
    return arr[0] if arr[0] > max_of_rest else max_of_rest

# Пример использования
array = [3, 5, 2, 9, 1]
print(f"Максимальный элемент в массиве {array}: {find_max(array)}")
