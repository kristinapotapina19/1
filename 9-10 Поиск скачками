def jump_search(arr, target):
    n = len(arr)
    # Находим начальный скачок
    step = int(n ** 0.5)
    prev = 0

    # Находим блок, в котором может находиться элемент
    while prev < n and arr[min(step, n) - 1] < target:
        prev = step
        step += int(n ** 0.5)
        if prev >= n:
            return -1  # Элемент не найден

    # Линейный поиск внутри блока
    while prev < min(step, n):
        if arr[prev] == target:
            return prev
        prev += 1

    return -1  # Если не найден

# Пример использования
array = [1, 3, 5, 7, 9, 11, 13, 15]
target = 7
index = jump_search(array, target)
print(f"Индекс элемента {target}: {index}")
