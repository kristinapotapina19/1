def power(x, n):
    # Базовый случай: любой число, возведённое в степень 0, равно 1
    if n == 0:
        return 1
    # Если степень отрицательная
    elif n < 0:
        return 1 / power(x, -n)
    # Рекурсивный вызов: x умножается на результат возведения x в степень n-1
    else:
        return x * power(x, n - 1)

# Пример использования:
result = power(2, 3)
print(result)  # Вывод: 8
