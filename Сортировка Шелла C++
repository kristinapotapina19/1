using namespace std;

#Функция для выполнения сортировки Шелла
void shellSort(int arr[], int n) {
    #Начальное значение интервала
    for (int gap = n / 2; gap > 0; gap /= 2) {
        #Выполняем сортировку вставками для текущего интервала
        for (int i = gap; i < n; i++) {
            int temp = arr[i];
            int j;

            #Сравниваем и перемещаем элементы
            for (j = i; j >= gap && arr[j - gap] > temp; j -= gap) {
                arr[j] = arr[j - gap];
            }
            arr[j] = temp;
        }
    }
}

#Функция для вывода массива
void printArray(int arr[], int size) {
    for (int i = 0; i < size; i++)
        cout << arr[i] << " ";
    cout << endl;
}

#Главная функция
int main() {
    int arr[] = {12, 34, 54, 2, 3}; #Исходный массив
    int n = sizeof(arr) / sizeof(arr[0]); #Размер массива

    cout << "Исходный массив:\n";
    printArray(arr, n);

    shellSort(arr, n); #Сортируем массив

    cout << "Отсортированный массив:\n";
    printArray(arr, n); #Выводим отсортированный массив

    return 0;
}
