class Node:
    def __init__(self, key):
        self.left = None
        self.right = None
        self.val = key

# Preorder: корень -> левое поддерево -> правое поддерево
def preorder(root):
    if root:
        print(root.val, end=' ')
        preorder(root.left)
        preorder(root.right)

# Inorder: левое поддерево -> корень -> правое поддерево
def inorder(root):
    if root:
        inorder(root.left)
        print(root.val, end=' ')
        inorder(root.right)

# Postorder: левое поддерево -> правое поддерево -> корень
def postorder(root):
    if root:
        postorder(root.left)
        postorder(root.right)
        print(root.val, end=' ')

# Создаем пример дерева:
#       1
#      / \
#     2   3
#    / \ 
#   4   5

root = Node(1)
root.left = Node(2)
root.right = Node(3)
root.left.left = Node(4)
root.left.right = Node(5)

print("Preorder обход:")
preorder(root)
print("\nInorder обход:")
inorder(root)
print("\nPostorder обход:")
postorder(root)
